<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundSetting"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/back"
        android:text="@string/setting"
        style="@style/TextStyleTopScreen"
        app:drawableStartCompat="@drawable/ic_back_arrow_48" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_button"
        android:text="@string/black_theme"
        style="@style/TextStyleSetting" />

    <TextView
        android:text="@string/share_the_app"
        app:drawableEndCompat="@drawable/ic_share_24"
        style="@style/TextStyleSetting"/>

    <TextView
        android:text="@string/write_to_support"
        app:drawableEndCompat="@drawable/ic_support_24"
        style="@style/TextStyleSetting"/>

    <TextView
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_light_mode_24"
        style="@style/TextStyleSetting"/>

</LinearLayout>


