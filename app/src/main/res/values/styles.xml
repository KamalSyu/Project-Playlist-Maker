<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconPadding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="AppTextStyleSetting" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>

    <style name="AppSwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="thumbTint">@color/yp_green</item>
        <item name="trackTint">@color/yp_wgreen</item>
    </style>

    <style name="CombinedStyle" parent="AppTextStyleSetting">
        <item name="thumbTint">@color/yp_green</item>
        <item name="trackTint">@color/yp_wgreen</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>

