<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundHomeScreen" >
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="BackgroundSetting" >
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="ButtonStyleHomeScreen" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:elevation">0dp</item>

    </style>

    <style name="TextStyleSetting" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:minHeight">61dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:drawableTint">@color/white</item>


    </style>

    <style name="TextStyleTopScreen" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:elevation">0dp</item>
        <item name="android:drawableTint">@color/white</item>

    </style>

    <style name="TextStyleSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">12dp</item>  <!-- Отступ от начала строки до иконки -->
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/button_background_search</item>
        <item name="drawableTint">@color/yp_black</item>
        <item name="android:drawablePadding">8dp</item>  <!-- Отступ между иконкой и текстом -->
        <item name="android:textColorHint">@color/yp_black</item>
    </style>

    <style name="ResetStyleButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:visibility">gone</item>
    </style>
